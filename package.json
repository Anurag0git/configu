{
  "name": "@configu/configu",
  "license": "Apache-2.0",
  "description": "Configu OSS monorepo powered by TypeScript, Node.js, pnpm and Turbo",
  "author": "@configu/dev",
  "engines": {
    "git": "*",
    "configu": ">=0.17",
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.0.6",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "prepare": "conc \"npm:prepare:*\"",
    "prepare:dev": "echo 'Hello, Configu!'",
    "clean:build": "shx rm -rf packages/*/build packages/*/out packages/*/dist",
    "clean:cache": "shx rm -rf .eslintcache packages/*/tsconfig.tsbuildinfo packages/*/coverage packages/*/tmp",
    "clean:modules": "shx rm -rf ./**/node_modules",
    "clean": "conc \"npm:clean:build\" \"npm:clean:cache\"",
    "clean:all": "npm run clean && npm run clean:modules",
    "format": "prettier '**/*.{js,ts}' --write --ignore-path ../.gitignore --ignore-path .prettierignore",
    "format:check": "prettier '**/*.{js,ts}' --check --ignore-path ../.gitignore --ignore-path --ignore-path .prettierignore",
    "lint": "eslint . --ext js,ts --cache --fix --ignore-path ../.gitignore",
    "lint:check": "eslint . --ext js,ts --cache --ignore-path ../.gitignore",
    "build": "tsc --build --verbose tsconfig.build.json",
    "build:docs": "typedoc",
    "test": "glob -c \"tsx --test\" \"packages/**/*.test.ts\"",
    "test:cov": "pnpm build && pnpm test -- --experimental-test-coverage node --test-reporter=spec --test-reporter=lcov --test-reporter-destination=stdout --test-reporter-destination=coverage/lcov.info",
    "test:watch": "pnpm test -- --watch",
    "start": "pnpm test:watch"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.1",
    "@types/node": "20.12.9",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.2",
    "eslint": "^9.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-spellcheck": "^0.0.20",
    "glob": "^10.3.12",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.9.3",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "turbo": "1.13.3",
    "zx": "8.0.2"
  }
}
