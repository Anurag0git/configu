{
  "name": "@configu/configu",
  "license": "Apache-2.0",
  "description": "Configu OSS monorepo powered by TypeScript, Node.js, pnpm and Turbo",
  "author": "@configu/dev",
  "homepage": "https://configu.com",
  "engines": {
    "git": "*",
    "configu": ">=0.17",
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.0.6",
  "scripts": {
    "prepare": "pnpm \"/^prepare:.*/\"",
    "prepare:hooks": "husky",
    "prepare:deps": "syncpack list-mismatches",
    "prepare:compile": "syncpack list-mismatches",
    "prepare:dev": "pnpm exec cat docs/images/ascii-art.txt",
    "clean:build": "pnpm exec rm -rf packages/*/build packages/*/out packages/*/dist",
    "clean:cache": "pnpm exec rm -rf .eslintcache packages/*/tsconfig.tsbuildinfo packages/*/coverage packages/*/tmp",
    "clean:modules": "pnpm exec rm -rf **/node_modules",
    "clean": "conc \"npm:clean:build\" \"npm:clean:cache\"",
    "clean:all": "pnpm clean && pnpm clean:modules",
    "format": "prettier $FILES --ignore-path .gitignore",
    "format:all": "FILES=\"**/*.{js,ts,md,mdx,json}\" pnpm format",
    "format:check": "pnpm format:all --check",
    "format:fix": "pnpm format:all --write",
    "lint": "eslint $FILES --ext $EXT --cache --ignore-path .gitignore",
    "lint:all": "FILES=\".\" EXT=\"js,ts\" pnpm lint",
    "lint:check": "pnpm lint:all --quiet",
    "lint:fix": "pnpm lint:all --fix",
    "build": "tsc --build --verbose tsconfig.build.json",
    "build:docs": "typedoc",
    "test": "tsx $FLAGS --test $FILES",
    "test:all": "FILES=\"packages\" pnpm test",
    "test:cov": "pnpm test --experimental-test-coverage --test-reporter=spec --test-reporter=lcov --test-reporter-destination=stdout --test-reporter-destination=coverage/lcov.info",
    "test:watch": "FLAGS=\"--watch\" pnpm test:all",
    "start": "pnpm test:watch"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.8.0",
    "@types/lodash": "^4.17.1",
    "@types/node": "20.12.11",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "syncpack": "^12.3.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.9.3",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "turbo": "1.13.3",
    "zx": "8.0.2"
  }
}
