{
  "version": "0.2.0",
  "configurations": [
    // https://tsx.is/vscode
    {
      // https://tsx.is/vscode#method-2-attach-the-debugger-to-a-running-node-js-process
      "name": "tsx",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeExecutable": "tsx",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
      ],
    },
    {
      // https://tsx.is/vscode#method-2-attach-the-debugger-to-a-running-node-js-process
      "name": "Attach to process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
      ],
    },
    {
      "name": "Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "runtimeArgs": [
        "--test",
        "--inspect",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
      ],
      "args": [
        // "ts/src/commands/commands.test.ts"
      ],
    },
    {
      "name": "play cli",
      "type": "node",
      "request": "launch",
      "console": "integratedTerminal",
      "program": "${workspaceRoot}/packages/cli/bin/dev.js",
      "env": {
        // "VAULT_ADDR": "http://127.0.0.1:8200",
        // "VAULT_TOKEN": "root",
        // "CONFIGU_ORG": "playground",
        // "CONFIGU_TOKEN": ""
      },
      "args": [
        // "test",
        // "upsert",
        // "export",
        // "eval",
        // "delete",
        // "run"
        // "--script",
        // "test",
        // "--store",
        // "json",
        // "--set",
        // "",
        // "--schema",
        // "${workspaceFolder}/ts/ts.cfgu.json"
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
  ]
}
